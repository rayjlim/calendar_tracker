{
    "require": {
        "slim/slim": "2.*",
        "slim/views": "0.*",
        "slim/extras": "2.0.3",
        "twig/twig": "1.*",
        "yeriomin/redbean-single-file": "4.*"
    },
    "require-dev": {
        "codeception/codeception": "^4.1",
        "codeception/module-phpbrowser": "^1.0.0",
        "codeception/module-asserts": "^1.0.0",
        "codeception/module-rest": "^1.2"
    },
    "autoload": {
        "classmap": [
            "backend/core",
            "backend/controller",
            "backend/dao",
            "backend/external"
        ],
        "files": [
            "backend/SERVER_CONFIG.php"
        ]
    }
    , "scripts":{
        "up": "./upload-go.sh",
        "release": "npx standard-version",
        "test:steps": "php vendor/bin/codecept run --steps",
        "test:acceptance": "php vendor/bin/codecept run acceptance",
        "test:api": "php vendor/bin/codecept run api"  
    }
}
