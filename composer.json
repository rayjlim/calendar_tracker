{
    "require": {
        "slim/slim": "2.*",
        "slim/views": "0.*",
        "slim/extras": "2.0.3",
        "twig/twig": "1.*",
        "yeriomin/redbean-single-file": "4.*"
    },
    "require-dev": {
        "codeception/codeception": "^4.1",
        "codeception/module-phpbrowser": "^1.0.0",
        "codeception/module-asserts": "^1.0.0",
        "codeception/module-rest": "^1.2",
        "squizlabs/php_codesniffer": "3.*",
        "phpmd/phpmd": "@stable"
    },
    "autoload": {
        "classmap": [
            "backend/core",
            "backend/controller",
            "backend/dao",
            "backend/external"
        ],
        "files": [
            "backend/SERVER_CONFIG.php"
        ]
    },
    "scripts": {
        "up": "./upload-go.sh",
        "release": "npx standard-version",
        "test:steps": "vendor/bin/codecept run --steps",
        "test:acceptance": "vendor/bin/codecept run acceptance",
        "test:api": "vendor/bin/codecept run api",
        "cs": "vendor/bin/phpcs -d standard=PSR2 backend/",
        "cbf": "vendor/bin/phpcbf -d standard=PSR2 backend/",
        "md": "vendor/bin/phpmd backend/ text codesize"
    },
    "version": "2.0.0"
}
