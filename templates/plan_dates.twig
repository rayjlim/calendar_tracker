{% include '_header.twig' %}
<title>CalPlanner - Plan Dates</title>
{% include '_banner.twig' %}

<h1>Plan Dates</h1>
<h3>Template Id: {{plan.id}}, Template: {{plan.description}}</h3>
<h4>End Date: {{targetEndDate}}, Number of Days: {{templateSize}}</h4>

<form method="post" action="publish">
    
    <input type="hidden" name="planId" value="{{plan.id}}">
    <input type="hidden" name="endDate" value="{{targetEndDate}}">
    <label>goal</label><input type="text" name="goal" value="">
    <input type="submit" name="save" value="Publish">
</form>


<form method="post" action="saveTemplateDates">
    <input type="hidden" name="action" value="update">
    <input type="hidden" name="templateId" value="{{plan.id}}">
    <input type="hidden" name="templateSize" value="{{templateSize}}">
    <p>Copy to New Template:<input type="checkbox" name="isForUpdate" value="1">
    <input type="text" name="newTemplateName" value="{{plan.description}}"></p>
    <input type="submit" name="save" value="save">


<table class="table">
    <tr>
        <th>Date</th>
        <th>Content</th>
    </tr>
    <tr><th>&nbsp;</th><th>Week 1</th></tr>

    {% for plandate in plandates %}
    {% if loop.index is divisibleby(7) %}
      <tr><th>&nbsp;</th><th>Week {{ (loop.index / 7)+1 }}</th></tr>
    {% endif %}
    <tr>
        <td>{{ loop.index }} - {{ plandate['date']}} {{ plandate['day']}}</td>
        <td><input type="text"  name="pdate{{ templateSize - loop.index }}" value="{{ plandate['content'] }}" size=40></td>
    </tr>
    {% endfor %}

</table>
</form>
<br><br>

{% include '_footer.twig' %}
