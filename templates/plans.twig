{% include '_header.twig' %}
<title>CalPlanner - Plans</title>
{% include '_banner.twig' %}
<a href="{{baseurl}}tracks/">Tracks</a>

<h1>Plans</h1>

<h3>Create new template</h3>
<form method="post" action="">
    Description: <input type="text" name="description" value="">
    Weeks: <input type="text" name="weeks_duration" value="">
    <input type="submit" name="go" value="Create">
</form>

<form action="{{baseurl}}plans/1" method="get"  class="form-inline">
<table class="table">
   <tr>
    <th>&nbsp;</th>
        <th>Description</th>
        <th>Duration (weeks)</th>
        <th colspan=2>Action</th>
    </tr>

    {% for plan in plans %}
    <tr>
        <td><input type="radio" name="templateId" value="{{plan.id}}"></td>
        <td>{{plan.id}} - {{plan.description}}</td>
        <td>{{plan.weeks_duration}}</td>
        <td><a href="{{baseurl}}delete/plans/{{plan.id}}">Remove</a></td>
    </tr>
    {% endfor %}

</table>

<p>Target End Date
<input type="text" name="targetEndDate" value="2017-8-21">
<input type="submit" name="action" value="Edit">
</p>
</form>


<h2>Plans in Calendar</h2>
<table class="table">
   <tr>
    
        <th>Description</th>
        <th>Duration (weeks)</th>
        <th colspan=2>Action</th>
    </tr>

    {% for plan in plansInCalendar %}
    <tr>
        
        <td>{{plan.id}} - {{plan.description}}</td>
        <td>{{plan.weeks_duration}}</td>
        <td><a href="{{baseurl}}api/delete/dates/{{plan.id}}">Remove from Calendar</a></td>
    </tr>
    {% endfor %}

</table>

<a href="{{googleLoginUrl}}" class="btn btn-default btn-large">Google</a>
hasGoogleToken : {{hasGoogleToken}}


{% include '_footer.twig' %}
